 <!-- Login Page -->
 <%- include ../partials/header.ejs %>
 <%- include ../partials/body.ejs %>
 <%- include ../partials/main_nav.ejs %>
             <!-- Main Content -->
             <main class="container">                        
                 <div class="row">
                     <div class="offset-md-3 col-md-6">
                         <h3><%= title %></h3>
                         <br>
                         <form class="form" method="POST" autocomplete="off">
                             <fieldset class="form-group mb-3">
                                 <label for="usernameTextField" class="form-label">Username</label>
                                 <input type="text" class="form-control" id="usernameTextField" name="username" required autofocus>
                             </fieldset>

                             <!-- Password Field with Show and Hide Function-->
                             <fieldset class="form-group mb-3">
                                 <label for="passwordTextField" class="form-label">Password</label>
                                 <div class="input-group">
                                     <input type="password" class="form-control" id="passwordTextField" name="password" required>
                                     <div class="input-group-append">
                                         <button class="btn border-left-0 border" type="button" style="background-color: white;" onclick="ShowHidePassword()">
                                             <i class="fas fa-eye d-none" id="show_eye"></i>
                                             <i class="fas fa-eye-slash" id="hide_eye"></i>
                                         </button>
                                     </div>
                                 </div>
                             </fieldset>

                             <!-- Register Page Button -->
                             <div>
                                <p>Need an account? <a href="/register">Register</a></p>
                             </div>
                             
                             <!-- Message Area -->
                             <% if (messages.length > 0) { %>                                        
                                 <div class="alert alert-danger">
                                     <%= messages %>
                                 </div>
                             <% } %>
                             
                             <!-- Login Button -->
                             <button class="btn btn-orange" type="submit" onclick=""><i class="fas fa-user-check"></i> <b>Login</b></button>
                         </form>
                     </div>
                 </div>
             </main>
 <%- include ../partials/bottom_nav.ejs %>
 <%- include ../partials/footer.ejs %>