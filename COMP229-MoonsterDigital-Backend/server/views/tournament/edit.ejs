
<% include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<%- include ../partials/body.ejs %>


<main class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">

        <h1 style="color:white;"><%=title%> </h1>
        <form class="form" method="POST">

              
            <div class="form-group">
              <input type="hidden"
              name="id"
              value="<%= Tournament._id %>">
                <label style="color:white;" for="ownerTextField">Owner</label>
                <input type="text" class="form-control" id="ownerTextField"
                placeholder="owner" name="owner" value="<%=Tournament.owner%>" required>
              </div>
            <div class="form-group">
              <label style="color:white;" for="titleTextField">Title</label>
              <input type="text" class="form-control" id="titleTextField"
              placeholder="title" name="title" value="<%=Tournament.title%>" required>
            </div>
            <div class="form-group">
              <label style="color:white;" for="descriptionTextField">Description</label>
              <textarea type="text" class="form-control" id="descriptionTextField"
              placeholder="Description" name="description" required><%=Tournament.description%></textarea>
            </div>
            <div class="form-group">
              <label style="color:white;"for="priceTextField">Active</label>
              <input type="text" class="form-control" id="priceTextField"
              placeholder="isActive" name="isActive" value="<%=Tournament.isActive%>" required>
            </div>
            <div class="form-group">
              <label style="color:white;" for="isCompletedTextField">isCompleted</label>
              <input type="text" class="form-control" id="isCompletedTextField"
              placeholder="isCompleted" name="isCompleted" value="<%=Tournament.isCompleted%>" required>
            </div>
            <div class="form-group">
                <label style="color:white;" for="playersTextField">Players</label>
                <input type="text" class="form-control" id="playersTextField"
                placeholder="players" name="players" value="<%=Tournament.players%>" required>
            </div>
            <div class="form-group">
                <label style="color:white;"for="startDateTextField">Start Date</label>
                <input type="date" class="form-control" id="startDateTextField"
                placeholder="startDate" name="startDate" value=<%= Tournament.startDate.toISOString().split('T')[0] %> required>
            </div>
            <div class="form-group">
                <label style="color:white;"for="endDateTextField">End Date</label>
                <input type="date" class="form-control" id="endDateTextField"
                placeholder="endDate" name="endDate" value=<%= Tournament.endDate.toISOString().split('T')[0] %> required>
            </div>
            <div class="form-group">
                <label style="color:white;"for="roundsTextField">Rounds</label>
                <input type="text" class="form-control" id="roundsTextField"
                placeholder="rounds" name="rounds" value="<%=Tournament.rounds%>" required>
            </div>
            
            <button type="submit" class="btn btn-primary"><i class="fa fa-edit"></i>Submit</button>
            <a href="/tournament/list" class="btn btn-warning"><i class="fa fa-undo"></i>Cancel</a>
          </form>
          </div>
    </div>
</main>


<% include ../partials/footer.ejs %>